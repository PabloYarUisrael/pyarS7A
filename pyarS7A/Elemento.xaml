<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pyarS7A.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR - ELIMINAR" FontSize="24" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtName" Placeholder="Nombre" />
            <Entry x:Name="txtUsuario" Placeholder="Usuario" />
            <Entry x:Name="txtContrasenia" Placeholder="Contraseña" />

            <Button x:Name="btnActualiar" Text="ACTUALIZAR" Clicked="btnActualiar_Clicked" />
            <Button x:Name="btneEliminar" Text="ELIMINAR" Clicked="btneEliminar_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>