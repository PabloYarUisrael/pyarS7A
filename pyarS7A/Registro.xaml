<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="pyarS7A.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Registro" FontSize="24" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtNombre" Placeholder="Ingrese Nombre" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario" />
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese Contraseña" />
            <Button x:Name="btnRegistrar" Text="Guardar" Clicked="btnRegistrar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>