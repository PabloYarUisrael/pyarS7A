<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pyarS7A.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana Login" FontSize="24" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario" />
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese Contraseña" />
            <Button x:Name="btnInicial" Text="Iniciar Sesion" Clicked="btnInicial_Clicked" />
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>